{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<style>
    .editLink { display: block; text-align: center;}
    .editLink a { margin: 15px 10px }
</style>
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Publication_year</th>
                <td>{{ book.publicationYear }}</td>
            </tr>
            <tr>
                <th>Number_pages</th>
                <td>{{ book.numberPages }}</td>
            </tr>
            <tr>
                <th>Isbn_code</th>
                <td>{{ book.isbnCode }}</td>
            </tr>
        </tbody>
    </table>

    <div class="editLink">
        <a href="{{ path('book_index') }}">back to list</a>
    
        <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
    </div>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
