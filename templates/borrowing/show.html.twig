{% extends 'base.html.twig' %}

{% block title %}Borrowing{% endblock %}

{% block body %}
<style>
    .editLink { display: block; text-align: center;}
    .editLink a { margin: 15px 10px }
</style>
    <h1>Borrowing</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrowing.id }}</td>
            </tr>
            <tr>
                <th>Borrowing_date</th>
                <td>{{ borrowing.borrowingDate ? borrowing.borrowingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Return_date</th>
                <td>{{ borrowing.returnDate ? borrowing.returnDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Borrower</th>
                <td>{{ borrowing.borrower.firstname }} {{borrowing.borrower.lastname}}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td>{{ borrowing.book.title }}</td>
            </tr>
        </tbody>
    </table>

    <div class="editLink">
        <a href="{{ path('borrowing_index') }}">back to list</a>
    
        <a href="{{ path('borrowing_edit', {'id': borrowing.id}) }}">edit</a>
    </div>

    {# {{ include('borrowing/_delete_form.html.twig') }} #}
{% endblock %}
