{% extends 'base.html.twig' %}

{% block title %}Hello BorrowingController!{% endblock %}

{% block body %}

    <h1>Borrowing Index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Borrowing Date</th>
                <th>Return Date</th>
            </tr>
        </thead>
        <tbody>
        {% for borrowing in borrowings %}
            <tr>
                <td>{{ borrowing.id }}</td>
                <td>{{ borrowing.borrowingDate ? borrowing.borrowingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.returnDate ? borrowing.returnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('book_new') }}">Create new</a> #}

{% endblock %}
