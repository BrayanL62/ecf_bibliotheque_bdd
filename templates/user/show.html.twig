{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<style>
    .editLink { display: block; text-align: center;}
    .editLink a { margin: 15px 10px }
</style>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="editLink">
        <a href="{{ path('user_index') }}">back to list</a>
    
        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
